{
  "name": "pomello",
  "version": "1.0.0-alpha.0",
  "description": "The Pomodoro App for Doers",
  "homepage": "https://pomelloapp.com",
  "license": "UNLICENSED",
  "author": "Tiny Nudge LLC <pomello@tinynudge.co>",
  "main": "processes/main/dist/index.cjs",
  "scripts": {
    "build:main": "vite build --config processes/main/vite.config.js",
    "build:preload": "vite build --config processes/preload/vite.config.js",
    "build:renderer": "vite build --config processes/renderer/vite.config.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "compile": "electron-builder --config .electron-builder.config.js --dir --config.asar=false",
    "format:check": "prettier --check 'processes/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write 'processes/**/*.{js,jsx,ts,tsx,json,md,yml}'",
    "lint:scripts": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint": "npm run lint:scripts",
    "release": "standard-version",
    "start": "node scripts/start.js",
    "test:main": "vitest --root processes/main",
    "test:renderer": "vitest --root processes/renderer",
    "test": "npm run test:main && npm run test:renderer",
    "update:vendors": "node scripts/update-electron-vendors.js"
  },
  "dependencies": {
    "electron-updater": "^4.6.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-react": "^1.2.0",
    "c8": "^7.11.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "electron": "^18.0.1",
    "electron-builder": "^22.14.13",
    "electron-builder-notarize": "^1.4.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^4.4.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "happy-dom": "^2.47.2",
    "prettier": "^2.6.1",
    "sass": "^1.49.9",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.7.12"
  },
  "private": true
}
