{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@models": ["./src/models"],
      "@services": ["./src/services"],
      "@ui/*": ["./src/ui/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": ["**/*.ts", "**/*.tsx", "../../types/**/*.d.ts", "../preload/contracts.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
